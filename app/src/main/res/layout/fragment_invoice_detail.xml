<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llWrapAllInvoiceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llContainerInvoiceDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivQrcodeInvoiceDetail"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/qr_code_bigsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Trạng thái"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtStateInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="Xe đang gửi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Thời gian xe vào"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtTimeInInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="11:28 - 09/11/2023"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Loại hóa đơn"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/ezxc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="Xe có đăng ký"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Biển số"
                        android:textSize="@dimen/font_size_16" />

                    <EditText

                        android:id="@+id/edtLicensePlateInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="516-99999"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Loại xe"
                        android:textSize="@dimen/font_size_16" />

                    <EditText

                        android:id="@+id/edtVehicleTypeInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="Xe hơi"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Họ tên"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtNameInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/source_sans_pro"
                        android:inputType="none"
                        android:padding="@dimen/padding_10"
                        android:text="Nguyễn Văn Mạnh"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Hình thức thanh toán"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:id="@+id/llPaymentMethodInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:gravity="center"
                        android:weightSum="5">

                        <EditText
                            android:id="@+id/edtPaymentMethodInvoiceDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/source_sans_pro"
                            android:hint="Chuyển khoản"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Hình thức gửi xe"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:id="@+id/llInvoiceTypeInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:background="@drawable/rounded_edit_text"
                        android:gravity="center"
                        android:weightSum="5">

                        <EditText
                            android:id="@+id/edtInvoiceTypeInvoiceDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:fontFamily="@font/source_sans_pro"
                            android:padding="@dimen/padding_10"
                            android:text="Theo giờ"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_16" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/down_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCarinInvoiceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ảnh xe vào"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ivCarInInvoiceDetail"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_marginTop="@dimen/margin_14"
                            android:background="@drawable/img"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ghi chú"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtNoteInvoiceDetail"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="7"
                        android:background="@drawable/rounded_edit_text"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Không có thông tin ghi chú"
                        android:maxLines="3"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>