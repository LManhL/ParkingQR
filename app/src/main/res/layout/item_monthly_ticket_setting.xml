<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/bg_user_qr_code_dialog"
    android:paddingBottom="@dimen/padding_10">

    <TextView
        android:id="@+id/tvVehicleTypeMonthlyTicketSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:gravity="center"
        android:text="Xe hơi"
        android:textSize="@dimen/font_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivEditMonthlyTicketSetting"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDeleteMonthlyTicketSetting"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tplMonthlyMonthlyTicketSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:theme="@style/Theme.App.Base"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleTypeMonthlyTicketSetting">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNumOfMonthMonthlyTicketSetting"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:enabled="true"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:hint="Số tháng"
            android:inputType="number"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_large" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tplOriginalPriceMonthlyTicketSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:theme="@style/Theme.App.Base"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tplMonthlyMonthlyTicketSetting">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtOriginalPriceMonthlyTicketSetting"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:enabled="true"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Giá gốc"
            android:inputType="number"
            android:text="300,000"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_large" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tplPromoMonthlyTicketSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:theme="@style/Theme.App.Base"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tplOriginalPriceMonthlyTicketSetting">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPromoPriceMonthlyTicketSetting"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:enabled="true"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Giá khuyến mãi"
            android:inputType="number"
            android:text="300,000"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_large" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tplDescriptionMonthlyTicketSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColorHint="@color/black"
        android:theme="@style/Theme.App.Base"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tplPromoMonthlyTicketSetting">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescriptionMonthlyTicketSetting"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:enabled="true"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Mô tả"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:text="Gửi xe tuyệt vời"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>