<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scrvContainerCreateParkingLot"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Tên bãi gửi xe"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtNameCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Nhập tên bãi gửi xe ví dụ: Parking XYZ"
                android:inputType="text"
                android:maxLines="2"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Số điện thoại"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtPhoneCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Địa chỉ"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtAddressCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Nhập địa chỉ bãi gửi xe"
                android:inputType="text"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Chọn vị trí trên bản đồ"
                android:textSize="@dimen/font_size_16" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fctvGoogleMapCreateParkingLot"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@drawable/bg_user_qr_code_dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Diện tích"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtAreaCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Nhập diện tích"
                android:inputType="numberDecimal"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Sức chứa xe hơi"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtCarCapaCrateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Ví dụ: 80"
                android:inputType="number"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Sức chứa xe máy"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtMotorCapaCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Ví dụ: 100"
                android:inputType="number"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Mô tả"
                android:textSize="@dimen/font_size_16" />

            <EditText
                android:id="@+id/edtDescripCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Mô tả về bãi gửi xe của bạn"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:padding="@dimen/padding_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:gravity="start|center_vertical"
                android:text="Ảnh liên quan"
                android:textSize="@dimen/font_size_16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlvImageCreateParkingLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateParkingLot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/rounded_button_icon_color"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="Tạo mới bãi gửi xe"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</ScrollView>