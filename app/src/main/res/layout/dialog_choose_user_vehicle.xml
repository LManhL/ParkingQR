<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_10">

    <TextView
        android:id="@+id/tvHeaderDialogChooseUserVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center"
        android:text="Biển số hiện tại"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLicensePlateDialogChooseUserVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:gravity="center"
        android:text="89L138851"
        android:textSize="@dimen/font_size_extra_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDialogChooseUserVehicle" />

    <View
        android:id="@+id/vDividerDialogChooseUserVehicle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_10"
        android:background="#80070FAD"
        app:layout_constraintTop_toBottomOf="@id/tvLicensePlateDialogChooseUserVehicle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlvVehicleListDialogChooseUserVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vDividerDialogChooseUserVehicle" />

</androidx.constraintlayout.widget.ConstraintLayout>